@model ContosoUniversity.ViewModels.WeeklyScheduleVM


@using ContosoUniversity.Models;
@using ContosoUniversity.Enumeration;
@{
    ViewBag.Title = "IndexInstructor";
}

<div class="jumbotron">
    <h1>Contoso University - Instructor </h1>
    <h2> Weekly Schedule - @Model.UserName</h2>
</div>
<div class="row">


    <div>
        <table class="table table-striped table-bordered">
            <thead>

                @if (Session["User"] != null)
                {
                    Person user = (Person)Session["User"];
                    <p class="text-center h3">Agenda - @Model.UserName</p>
                }
            </thead>
            <tr>
                <th class="text-center">Heure</th>
                <th class="text-center ">Monday</th>
                <th class="text-center">Tuesday</th>
                <th class="text-center">Wednesday</th>
                <th class="text-center">Thursday</th>
                <th class="text-center">Friday</th>
            </tr>

            @for (int heure = 8; heure <= 19; heure++)
            {
                <tr>
                    <td class="text-center">@heure h - @(heure + 1) h </td>


                    <td class="text-center">@Model.Agenda[heure][CourseDay.Monday]</td>
                    <td class="text-center">@Model.Agenda[heure][CourseDay.Tuesday]</td>
                    <td class="text-center">@Model.Agenda[heure][CourseDay.Wednesday]</td>
                    <td class="text-center">@Model.Agenda[heure][CourseDay.Thursday]</td>
                    <td class="text-center">@Model.Agenda[heure][CourseDay.Friday]</td>

                </tr>
            }
        </table>

    </div>


</div>

