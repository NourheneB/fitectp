@model ContosoUniversity.ViewModels.StudentDetailsData

@{
    ViewBag.Title = "Details";
    string classValue = "";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            <table class="table" id="table">
                <tr style="background-color: lightgray">
                    <th>Course Title</th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Courses)
                {
                    classValue = "";
                    if (Model.Enrollments.ContainsKey(item.Key))
                    {
                        classValue = "success";
                    }
                    <tr class="@classValue">
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        @{
                            bool find = false;
                            if (Model.Enrollments.ContainsKey(item.Key))
                            {
                                find = true;
                            }
                            if (!find)
                            {
                                <td>
                                    @Html.ActionLink("Subscribe at this course", "Subscribe", new { id = item.Key }, new { onclick = "return confirm('Are you sure you want to subscribe at this course ?');" })
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            </table>
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="~/Data/Image/SubscribeCourse.png" style="margin-bottom: 2pt" />
            <span>Course already subscribe</span>
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="~/Data/Image/Non-SubscribeCourse.png" />
            <span>Course you can subscribe</span>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@if (TempData["Error"] != null)
{
    <div class="alert-danger">
        <strong> @TempData["Error"] </strong>
    </div>
}