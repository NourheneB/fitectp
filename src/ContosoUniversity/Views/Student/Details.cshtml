@model ContosoUniversity.ViewModels.StudentDetailsData

@{
    ViewBag.Title = "Details";
    string classValue = "";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            <table class="table" id="table">
                <tr style="background-color: lightgray">
                    <th>Course Title</th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Courses)
                {
                    foreach (var e in Model.Enrollments)
                    {
                        if (e.CourseID == item.CourseID)
                        {
                            classValue = "success";
                            break;
                        }
                        classValue = "";
                    }
                <tr class="@classValue">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @{
                        int i = 0;
                        foreach (var e in Model.Enrollments)
                        {
                            if (e.CourseID == item.CourseID)
                            {
                                i++;
                                break;
                            }
                        }
                        if (i == 0)
                        {
                            <td>
                                @Html.ActionLink("Subscribe at this course", "Details", new { id = item.CourseID })
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
                }
            </table>
            <br />
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="~/Data/Image/SubscribeCourse.png" style="margin-bottom: 2pt" />
            <span>Course ever subscribe</span>
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="~/Data/Image/Non-SubscribeCourse.png" />
            <span>Course you can subscribe</span>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts
    {
    
}
